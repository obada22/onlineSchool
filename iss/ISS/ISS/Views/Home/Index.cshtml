@model IEnumerable<ISS.Models.Data.news>

@{
    ViewBag.Title = "Home Page";
}

<style>
    .news img {
        height: 250px;
        width: 100%;
    }

    .events {
        margin-bottom: 25px;
    }
</style>
<div class="container text-center">
    <div class="row">

        @foreach (var item in Model)
        {
            <div class="col-md-4 col-sm-4 col-xs-6 news">
                @if (item.picPath == null)
                {

                    <a href="/Home/newsdetails/@item.newsID">
                        <img src="~/Content/img/noimage.png" class="img-responsive events" alt="@item.title">
                    </a>
                }
                else
                {

                    <a href="/Home/newsdetails/@item.newsID">
                        <img src="@item.picPath" class="img-responsive events" alt="@item.title">
                    </a>
                }
            </div>
        }
    </div>

</div>

