
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/bundles/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <!--navbar-->
    <div class="navbar navbar-inverse navbar-fixed-top ">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>

                </button>
                @Html.ActionLink("ISS", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li>@Html.ActionLink(ISS.Language.dil.Home, "Index", "Home")</li>
                    <li>@Html.ActionLink(ISS.Language.dil.About, "About", "Home")</li>
                    <li>@Html.ActionLink(ISS.Language.dil.Contact, "Contact", "Home")</li>

                    @if (Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink(ISS.Language.dil.Admin, "Index", "Admin", new { area = "admin" }, null)</li>


                    }

                </ul>
                <!--navbar right-->
                <ul class="nav navbar-nav navbar-right">
                    @Html.Partial("_LoginPartial")
                    <!--language-->
                    @if (Request.IsAuthenticated)
                    {
                        <li class="dropdown nav navbar-nav">
                            <a class="dropdown-toggle" data-toggle="dropdown">
                                <span class="fa fa-user"> </span>
                            </a>
                            <ul class="dropdown-menu ">

                                <li>@Html.ActionLink("Student", "index", "student", new { area = "Student" }, null)My Profile</li>
                                <li><a href="#"><i class="fa fa-book"> </i> My Cources </a></li>
                                <li><a href="#"><i class="fa fa-celander"> </i> My Cource Program</a></li>
                            </ul>
                        </li>
                    }
                    <li class="dropdown nav navbar-nav">
                        <a class="dropdown-toggle" data-toggle="dropdown">
                            <span class="fa fa-language"> </span>
                        </a>
                        <ul class="dropdown-menu ">
                            <li>
                                <a href="@Url.Action("DilDegistir", "Home", new { dil = "en", returnurl = this.Request.RawUrl })" title="English">
                                    <img style="display:inline" src="@Url.Content("~/Content/img/flag-english.png")" width="30" height="30" /> English
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("DilDegistir", "Home", new { dil = "tr", returnurl = this.Request. RawUrl })">
                                    <img style="display:inline" src="@Url.Content("~/Content/img/flag-turkish.png")" width="30" height="30" />Türkçe
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("DilDegistir", "Home", new { dil = "ar", returnurl = this.Request.RawUrl })">
                                    <img style="display:inline" src="@Url.Content("~/Content/img/flag-arabic.png")" width="30" height="30" />عربي
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <!--slider-->
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Wrapper for slides -->

        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="~/Content/img/students.jpg" alt="Image" style="width:100%;height:400px;">
                <div class="carousel-caption ">
                    <div class="bigger">
                        <h1>@ViewBag.Title</h1>
                        <p>@ViewBag.Message</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <!--body-->
    <div class="container body-content">
        @RenderBody()

    </div>

    <!--footer-->
    <div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ISS | INTERNET STUDENT'S SYSTEM</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)
</body>
</html>
